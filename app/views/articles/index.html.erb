<% provide :title, t(".articles") %>

<div id="articles">
  <h1><%= t ".articles" %></h1>
  <% @articles.each do |article| %>
    <h2>
      <%= link_to article.name, article %>
      <span class="comments">(<%= pluralize(article.comments.size, t(".comment")) %>)</span>
    </h2>
    <div class="created_at">on <%= article.created_at.strftime("%b %d, %Y") %></div>
    <div class="content">
      <%= simple_format(article.content) %>
      <div id="readmore"><%= link_to ">>Readmore", article %></div>
    </div>
  <% end %>
  <div class="pagination"><%= will_paginate @articles %></div>
</div>

<p><%= link_to t(".new_article"), new_article_path %></p>